public class Device {
    // The device class is defined
    String deviceName;
    String category;
    float salePrice;
    float VATPercentage;
    String code;
    int availableUnits;
    int minimumThreshold;
    
    public Device(String deviceName, String category, float salePrice, float VATPercentage, String code, int availableUnits, int minimumThreshold) {
        this.deviceName = deviceName;
        this.category = category;
        this.salePrice = salePrice;
        this.VATPercentage = VATPercentage;
        this.code = code;
        this.availableUnits = availableUnits;
        this.minimumThreshold = minimumThreshold;
    }
}
